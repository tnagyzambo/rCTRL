{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ros2-build",
            "type": "shell",
            "command": "clear && colcon build --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rdata-build",
            "type": "shell",
            "command": "clear && colcon build --packages-select rdata --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rdata-build msgs",
            "type": "shell",
            "command": "clear && colcon build --packages-select rdata_msgs --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rdata-run",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 run rdata rdata_node",
        },
        {
            "label": "rdata-launch example",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch launch/rdata_example.xml",
        },
        {
            "label": "micro_ros_agent-build",
            "type": "shell",
            "command": "clear && colcon build --packages-select micro_ros_agent --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "micro_ros_agent-run",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 run micro_ros_agent micro_ros_agent udp4 --port 8090",
        },
        {
            "label": "rstate-build",
            "type": "shell",
            "command": "clear && colcon build --packages-select rstate --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rstate-build msgs",
            "type": "shell",
            "command": "clear && colcon build --packages-select rstate_msgs --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rstate-run",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 run rstate rstate_node",
        },
    ]
}
