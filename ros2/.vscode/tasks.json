{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ros2-build",
            "type": "shell",
            "command": "clear && colcon build --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "ros2-clean",
            "type": "shell",
            "command": "clear && rm -R build install log",
        },
        {
            "label": "rdata-build",
            "type": "shell",
            "command": "clear && colcon build --packages-select rdata --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rdata_vsensor-build",
            "type": "shell",
            "command": "clear && colcon build --packages-select rdata_vsensor --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo'",
        },
        {
            "label": "rdata_vsensor-run",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 run rdata_vsensor rdata_vsensor",
        },
        {
            "label": "rdata_vsensor-launch example",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch launch/rdata_vsensor_example.xml",
        },
        {
            "label": "rgpio-build",
