{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clear && colcon build --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
        },
        {
            "label": "rctrl build",
            "type": "shell",
            "command": "clear && cd src/rctrl && bash web_build.sh",
        },
        {
            "label": "rctrl run",
            "type": "shell",
            "command": "clear && cd src/rctrl && bash web_start.sh",
        },
        {
            "label": "rctrl test",
            "type": "shell",
            "command": "clear && cargo test --manifest-path=src/rctrl/rctrl_rosbridge/Cargo.toml",
        },
        {
            "label": "rctrl docs",
            "type": "shell",
            "command": "clear && cargo doc --manifest-path=src/rctrl/Cargo.toml --target wasm32-unknown-unknown --workspace --verbose",
        },
        {
            "label": "run rdata",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run rdata rdata_main",
        },
        {
            "label": "run rdata_vsensor",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run rdata rdata_vsensor",
        },
        {
            "label": "run rdata_example",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run rdata rdata_example",
        },
        {
            "label": "run launch",
            "type": "shell",
            "command": "source install/setup.bash; ros2 launch launch/test.xml",
        },
        {
            "label": "run",
            "dependsOn": [
                "run rdata",
                "run rocketdata_vsensor"
            ],
        },
    ]
}