{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "colcon build --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
        },
        {
            "label": "build rust",
            "type": "shell",
            "command": "cd src/rdata/example/gui && bash web_build.sh",
        },
        {
            "label": "test rust",
            "type": "shell",
            "command": "cargo test --manifest-path=src/rdata/example/gui/rosbridge/Cargo.toml",
        },
        {
            "label": "docs rust",
            "type": "shell",
            "command": "cargo doc --manifest-path=src/rdata/example/gui/Cargo.toml",
        },
        {
            "label": "run rust",
            "type": "shell",
            "command": "cd src/rdata/example/gui/ && bash web_start.sh",
        },
        {
            "label": "run rdata",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run rdata rdata_main",
        },
        {
            "label": "run rdata_vsensor",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run rdata rdata_vsensor",
        },
        {
            "label": "run rdata_example",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run rdata rdata_example",
        },
        {
            "label": "run launch",
            "type": "shell",
            "command": "source install/setup.bash; ros2 launch launch/test.xml",
        },
        {
            "label": "run",
            "dependsOn": [
                "run rdata",
                "run rocketdata_vsensor"
            ],
        },
    ]
}