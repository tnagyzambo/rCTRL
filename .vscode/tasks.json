{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "colcon build --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
        },
        {
            "label": "build test container",
            "type": "shell",
            "command": "docker build . -f .testcontainer/Dockerfile -t testcontainer",
        },
        {
            "label": "run test container",
            "type": "shell",
            "command": "docker run --rm -v ${PWD}/install:/install -i --name testcontainer testcontainer:latest",
        },
        {
            "label": "run listener",
            "type": "shell",
            "command": "docker exec -it --user ros testcontainer /bin/bash -c 'chmod +x /install/setup.bash; . /install/setup.bash; ros2 run test_pkg listener'",
        },
        {
            "label": "run talker",
            "type": "shell",
            "command": ". install/setup.bash && ros2 run test_pkg talker",
        },
        {
            "label": "run",
            "dependsOn": [
                "run listener",
                "run talker"
            ],
        },
        {
            "label": "debug test container",
            "type": "shell",
            "command": "docker exec -it --user ros testcontainer /bin/bash",
        },
    ]
}