{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "colcon build --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
        },
        {
            "label": "build test container",
            "type": "shell",
            "command": "docker build . -f .testcontainer/Dockerfile -t testcontainer",
        },
        {
            "label": "run test container",
            "type": "shell",
            "command": "docker run --rm -v ${PWD}/install:/install -i --name testcontainer testcontainer:latest",
        },
        {
            "label": "run rocketdata",
            "type": "shell",
            "command": "docker exec -it --user ros testcontainer /bin/bash -c 'chmod +x /install/setup.bash; . /install/setup.bash; ros2 run rocketdata rocketdata'",
        },
        {
            "label": "run rocketdata_virtual_sensor",
            "type": "shell",
            "command": "docker exec -it --user ros testcontainer /bin/bash -c 'chmod +x /install/setup.bash; . /install/setup.bash; ros2 run rocketdata rocketdata_virtual_sensor'",
        },
        {
            "label": "run",
            "dependsOn": [
                "run rocketdata",
                "run rocketdata_virtual_sensor"
            ],
        },
        {
            "label": "debug test container",
            "type": "shell",
            "command": "docker run --rm -v ${PWD}/install:/install -i --name testcontainer testcontainer:latest /bin/bash",
        },
    ]
}